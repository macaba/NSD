		</TabControl>
		<Grid Grid.Row="1">
			<TextBlock Name="tbStatus" Padding="6" HorizontalAlignment="Stretch" Text="{Binding Status}" Background="{Binding StatusBackground}"></TextBlock>
		</Grid>
	</Grid>
</Window>
